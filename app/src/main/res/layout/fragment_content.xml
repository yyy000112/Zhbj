<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.ye.zhbjj.view.NoScrollViewPager
        android:id="@+id/vp_content"
        android:text="首页"
        android:textColor="@color/colorBlack"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <RadioGroup
        android:id="@+id/rg_group"
        android:orientation="horizontal"
        android:background="@mipmap/bottom_tab_bg"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rb_home"
            style="@style/radio_style"
            android:drawableTop="@drawable/select_bg1"
            android:checked="true"
            android:text="首页"
             />
        <RadioButton
            android:id="@+id/rb_news"
            style="@style/radio_style"
            android:drawableTop="@drawable/select_bg2"
            android:text="新闻中心"
            />
        <RadioButton
            android:id="@+id/rb_smart"
            style="@style/radio_style"
            android:drawableTop="@drawable/select_bg3"
            android:text="智慧服务"
            />
        <RadioButton
            android:id="@+id/rb_gov"
            style="@style/radio_style"
            android:drawableTop="@drawable/select_bg4"
            android:text="政务"
            />
        <RadioButton
            android:id="@+id/rb_setting"
            style="@style/radio_style"
            android:drawableTop="@drawable/select_bg5"
            android:text="设置"
            />
    </RadioGroup>

</LinearLayout>